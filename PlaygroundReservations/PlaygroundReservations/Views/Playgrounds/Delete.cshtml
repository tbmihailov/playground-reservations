@model PlaygroundReservations.Models.Playground

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Playground</legend>

    <div class="display-label">SportComplex</div>
    <div class="display-field">@(Model.SportComplex == null ? "None" : Model.SportComplex.Name)</div>

    <div class="display-label">SportTypeId</div>
    <div class="display-field">@Model.SportTypeId</div>

    <div class="display-label">SportType</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.SportType).ToString()</div>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">Width</div>
    <div class="display-field">@String.Format("{0:F}", Model.Width)</div>

    <div class="display-label">Length</div>
    <div class="display-field">@String.Format("{0:F}", Model.Length)</div>

    <div class="display-label">Surface</div>
    <div class="display-field">@(Model.Surface == null ? "None" : Model.Surface.Name)</div>

    <div class="display-label">PlaygroundImages</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.PlaygroundImages).ToString()</div>

    <div class="display-label">Reservations</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Reservations).ToString()</div>

    <div class="display-label">ReservationFees</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.ReservationFees).ToString()</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


