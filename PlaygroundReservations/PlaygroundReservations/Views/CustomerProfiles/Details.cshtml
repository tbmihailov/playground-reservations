@model PlaygroundReservations.Models.CustomerProfile

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>CustomerProfile</legend>

    <div class="display-label">Email</div>
    <div class="display-field">@Model.Email</div>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Notes</div>
    <div class="display-field">@Model.Notes</div>

    <div class="display-label">Phone</div>
    <div class="display-field">@Model.Phone</div>

    <div class="display-label">Reservations</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Reservations).ToString()</div>
</fieldset>
<p>
    @Html.ActionLink("редактирай", "edit", new { id = Model.CustomerProfileId }, new { @class = "edit-button" }) |
    @Html.ActionLink("към списък", "Index", null, new { @class = "back-button" })
</p>


