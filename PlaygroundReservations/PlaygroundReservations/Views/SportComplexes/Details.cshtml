@model PlaygroundReservations.Models.SportComplex

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>SportComplex</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Address</div>
    <div class="display-field">@Model.Address</div>

    <div class="display-label">City</div>
    <div class="display-field">@Model.City</div>

    <div class="display-label">Section</div>
    <div class="display-field">@Model.Section</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">Phone</div>
    <div class="display-field">@Model.Phone</div>

    <div class="display-label">Email</div>
    <div class="display-field">@Model.Email</div>

    <div class="display-label">Latitude</div>
    <div class="display-field">@String.Format("{0:F}", Model.Latitude)</div>

    <div class="display-label">Longitude</div>
    <div class="display-field">@String.Format("{0:F}", Model.Longitude)</div>

    <div class="display-label">Owner</div>
    <div class="display-field">@(Model.Owner == null ? "None" : Model.Owner.Name)</div>

    <div class="display-label">Playgrounds</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Playgrounds).ToString()</div>
</fieldset>
<p>
    @Html.ActionLink("редактирай", "edit", new { id = Model.SportComplexId }, new { @class = "edit-button" }) |
    @Html.ActionLink("към списък", "Index", null, new { @class = "back-button" })
</p>


